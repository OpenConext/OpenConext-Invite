            </plugin>
            <plugin>
                <groupId>org.jacoco</groupId>
                <artifactId>jacoco-maven-plugin</artifactId>
                <version>0.8.13</version>
                <configuration>
                    <excludes>
                        <exclude>db/mysql/migration/*.class</exclude>
                        <exclude>**/MockMailBox.*</exclude>
                    </excludes>
                </configuration>
                <executions>
                    <execution>
                        <goals>
